% Colours
%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\usecolortheme{rose}
\setbeamercolor{title page}{fg=white}
\setbeamercolor{logo}{bg=UEPGGrey}
\setbeamercolor{frametitle}{fg=white,bg=UEPGBlue}
\setbeamercolor{section in sidebar}{fg=black,bg=UEPGGrey}
\setbeamercolor{subsection in sidebar}{fg=black,bg=UEPGGrey}
\setbeamerfont{section in sidebar}{series=\bfseries}
\setbeamercolor{block title}{bg=UEPGBlue!20!white,fg=UEPGBlue}
\setbeamercolor{block body}{bg=UEPGGrey!40!white}
\setbeamercolor{itemize item}{fg=UEPGBlue}
\setbeamercolor{structure}{fg=UEPGBlue!80}
\setbeamercolor{title}{fg=white}


